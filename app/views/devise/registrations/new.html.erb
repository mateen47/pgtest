<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group" >
      <div class="control-label col-md-2">
        <%=f.label :name %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-8">
        <%= f.email_field :email, class: "form-control",placeholder: "Enter Email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, rows: 1, class: "form-control",placeholder: "Choose a password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-8">
        <%= f.label :password_confirmation, "Confirm Password" %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, rows: 1, class: "form-control",placeholder: "Confirm the password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-8">
        <%= f.label :user_type, "select user type" %>
      </div>
      <div class="col-md-8" >
        <%= f.select :user_type, options_for_select([["Manager", "manager"], ["Developer", "developer"], ["QA", "qa"]]) %>      
      </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
