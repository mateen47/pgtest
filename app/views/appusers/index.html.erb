<br>
<h1 align="center">List of user's</h1>
<hr />


<div align="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row" style="padding-left: 450px;">
				<div class="well col-md-4 col-md-offset-4" style=" background-color: #eee;">	
					<br>	
					<li><%= link_to gravatar_for(user), appuser_path(user) %></li>
					<li class="user-title"><%= link_to user.name, appuser_path(user) %></li>
					<% if can? :edit, Project %>
						<% if user.user_type != "manager" %>
							<li><%= link_to "Add this user to project", "/appusers/#{user.id}/projects" %></li>
						<% end %>
					<% end %>
					<% if can? :delete, user %>
						<% if current_appuser != user %>
							<li><%= link_to "Delete this user", appuser_path(user), method: :delete %></li>
						<% end %>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
</div>


