<br><br>
<div class="row">

  <div class="col-md-12" style="padding-left: 300px">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group" >
      <div class="control-label col-md-2">
        <%=f.label :name %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-8">
        <%= f.email_field :email, class: "form-control",placeholder: "Enter Email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, rows: 1, class: "form-control",placeholder: "Choose a password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-8">
        <%= f.label :password_confirmation, "Confirm Password" %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, rows: 1, class: "form-control",placeholder: "Confirm the password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-8">
        <%= f.label :user_type, "select user type" %>
      </div>
      <div class="col-md-8" >
        <%= f.select_tag :user_type, options_for_select(User.user_types.map {|k, v| [k, v]}) %>
      </div>
      </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit(@user.new_record? ? "Create my account" : "Update", class: "btn btn-primary btn-lg btn-xlarge") %>
      </div>
    </div>
  <% end %>
  <div class="colormatch" style="padding-left: 15px">
    [ <%= link_to "Cancel request and return to recipes listing", users_path %> ]
  </div>
  <br><br><br><br>
  </div>
</div>
