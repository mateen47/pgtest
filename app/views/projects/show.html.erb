<br>
<h1 align="center">Project Name:<%= @project.name %></h1>
<hr />
<br><br>
<div class="row">
  <div class="col-md-8 well" style="padding-left: 100px;">
    <h2>Name: <%= @project.name %> </h2>
    <p>Description: <%= @project.description %></p>
    <p>Manager: <% manager = @project.appusers.find_by(user_type: "manager") %>
      <% if manager != nil %>
        <%= link_to manager.name, appuser_path(manager) %></p>
      <% end %>
    <p>Developer: <% developer = @project.appusers.find_by(user_type: "developer") %>
      <% if developer != nil %>
        <%= link_to developer.name, appuser_path(developer) %></p>
      <% end %>
      <p>Quality Assurance: <% qa = @project.appusers.find_by(user_type: "qa") %>
      <% if qa != nil %>
        <%= link_to qa.name, appuser_path(qa) %></p>
      <% end %>
    <% if can? :create, Bug %>
      <%= link_to "add bug", "/projects/#{@project.id}/bugs/new" %>
    <% end %>   
    <br>
  </div>
  <div class="col-md-8 well" style=" padding-left: 100px;">
    <div class="recipe-actions ">
      <% if can? :edit, @project %>
        <%= link_to "Edit Profile", edit_project_path(@project), class: "btn btn-xs btn-warning " %>
      <% end %>
      <% if can? :delete, @project %>
        <%= link_to "Delete Profile", project_path(@project) , method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure you want to delete this recipe?"} %>
      <% end %>
      <%= link_to "Return to Projects list", projects_path , class: "btn btn-xs btn-primary" %>
    </div>
  </div>
</div>
<br>
<hr />
