<br>
<h1 align="center">List of project's</h1>
<hr />


<div align="center">
  <% @projects.each do |project| %>
    <ul class="listing">
      <div class="row" style="padding-left: 450px;">
        <div class="well col-md-4 col-md-offset-4" style=" background-color: #eee;">  
          <br>  
          <li class="user-title"><%= link_to project.name, project_path(project) %></li>
          <br>    
          <% if params[:user_id] == nil %>
            <% if can? :create, Bug %>
              <li><%= link_to "add bug", "/projects/#{project.id}/bugs/new" %></li>
            <% end %>     
            <% if can? :delete, project %>
              <li><%= link_to "Delete this user", project_path(project), method: :delete %></li>
            <% end %>
          <% elsif current_appuser.id != params[:user_id] %>
              <li><%= link_to "Add this project", "/appusers/#{params[:user_id]}/projects/#{project.id}" %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>


