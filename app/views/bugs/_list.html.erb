<br>
<h1 align="center">List of project's</h1>
<hr />


<div align="center">
  <% @bugs.each do |bug| %>
    <ul class="listing">
      <div class="row" style="padding-left: 450px;">
        <div class="well col-md-4 col-md-offset-4" style=" background-color: #eee;">  
          <br>  
          <li class="user-title"><%= link_to bug.title, bug_path(bug) %></li>
            <li>  <p><Strong>Description: </Strong> <%= bug.description %></p></li>
            <br>
            <li> <p><Strong>Type: </Strong> <%= bug.bug_type %></p></li>
            <li> <p><Strong>Status: </Strong> <%= bug.status %></p></li>
          <li><%= link_to "Delete this user", bug_path(bug), method: :delete %></li>
          
        </div>
      </div>
    </ul>
  <% end %>
</div>


